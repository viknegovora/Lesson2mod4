<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EFEA"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="273dp"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Ваш билет"
        android:textColor="#3B4CE6"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dataTicket"
        android:layout_marginTop="36dp"
        android:background="#F3E3E3"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="14dp"
        android:gravity="center"
        android:textColor="#3B4CE6"
        android:textColorHint="#3B4CE6"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_width="380dp"
        android:layout_height="230dp"
        android:hint="Данные билета"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:text="ОФОРМИТЬ НОВЫЙ БИЛЕТ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="472dp" />


</androidx.constraintlayout.widget.ConstraintLayout>